{
  "name": "khromov/clarity",
  "description": "Ad blocker for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL2",
  "authors": [
    {
      "name": "Khromov"
    }
  ],
  "require": {
    "php": ">=7.0"
  },
  "require-dev": {
    "10up/phpcs-composer": "dev-master"
  },
  "scripts": {
    "lint": "phpcs . -s",
    "lint-fix": "phpcbf ."
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
